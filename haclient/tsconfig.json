{
    "compilerOptions": {
        // this aligns with Vue's browser support
        "target": "es5",
        // this enables stricter inference for data properties on `this`
        "strict": true,
        // if using webpack 2+ or rollup, to leverage tree shaking:
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitThis": false, //coward's way out
        "baseUrl": "./", //required for the paths thing to work
        "paths": {
            "@/*" : ["src/*"]   // resolve @ as webpack does in webpack.base.conf:37 (for tooling support so you dont get red squigleys)
        }
    },
    "types": [
        "core-js"
    ]
}